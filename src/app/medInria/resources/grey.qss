$BLUE_GREY   = #324156;

$HIGHLIGHT_COLOR   = $DARK_ORANGE;
$DARKGRAY          = $GREY01;
$MEDINRIA_DARKGRAY = $GREY02; 

$GREEN      = #67C349; /*only in success progress bar*/
$RED        = #E43C3C; /*only in failure progress bar*/

/*******************************************************************************
    BACKGROUND
 *******************************************************************************/

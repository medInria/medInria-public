$PUSH_BUTTON_RADIUS             = 0px;
$GROUP_BOX_RADIUS               = 3px;
$SCROLL_BAR_RADIUS              = 5px;
$COMBO_BOX_RADIUS               = 0px;
$VIEW_PROPERTY_COMBO_BOX_RADIUS = 2px;
$FINDER_TOOLBAR_RADIUS          = 2px;
$VIEW_CONTAINER_BUTTON_RADIUS   = 0px;
$QUICK_ACCESS_MENU_RADIUS       = 0px;


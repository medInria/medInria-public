/*******************************************************************************
    SIZES
 *******************************************************************************/
$STATUS_BAR_HEIGHT              = 34px;
$PROGRESS_BAR_HEIGHT            = 12px;
$CHECKBOX_SIZE                  = 15px;
$RADIO_BUTTON_SIZE              = 15px;
$SLIDER_SIZE                    = 8px;
$PUSH_BUTTON_SIZE               = 20px;
$COMBO_BOX_SIZE                 = 20px;
$SCROLL_BAR_WIDTH               = 12px;
$SCROLL_BAR_MIN_SIZE            = 28px;
$TAB_HEIGHT                     = 28px;
$HEADER_HEIGHT                  = 26px;
$TOOLBOX_HEADER_HEIGHT          = 28px;
$VIEW_PROPERTY_MIN_HEIGHT       = 250px;
$FINDER_PATH_BAR_HEIGHT         = 28px;
$LAYOUT_BUTTON_MIN_HEIGHT       = 32px;


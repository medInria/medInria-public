$CONTAINER_BORDER                  = 2px solid $GREY09;
$CONTAINER_SELECTED_BORDER         = 2px solid $HIGHLIGHT_COLOR;
$MENU_SEPARATOR_BORDER             = 2px solid $GREY10;
$PROGRESS_BAR_BORDER               = 1px solid $GREY01;
$BROWSER_CONTAINER_BORDER          = 2px solid $GREY06;
$DROP_SITE_BORDER                  = 1px solid $GREY06;
$DATABASE_PREVIEW_BORDER           = $CONTAINER_BORDER;
$QUICK_ACCESS_PUSH_BUTTON_BORDER   = 0px;

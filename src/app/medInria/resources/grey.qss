$CONTAINER_BACKGROUND                  = $GREY04;
$VIEW_CONTAINER_BUTTON_HOVER_BACKGOUND = $GREY10;

$DROP_SITE_BACKGROUND                  = $GREY01;

/*******************************************************************************
    WIDGET COLOR
 *******************************************************************************/

$SATURATION = 0;

$GREY10     = hsv($HUE,$SATURATION,120);
$GREY09     = hsv($HUE,$SATURATION,130);
$GREY08     = hsv($HUE,$SATURATION,140);
$GREY07     = hsv($HUE,$SATURATION,150);
$GREY06     = hsv($HUE,$SATURATION,160);
$GREY05     = hsv($HUE,$SATURATION,170);
$GREY04     = hsv($HUE,$SATURATION,180);
$GREY03     = hsv($HUE,$SATURATION,190);
$GREY02     = hsv($HUE,$SATURATION,200);
$GREY01     = hsv($HUE,$SATURATION,210);
$GREY00     = hsv($HUE,$SATURATION,220);
$OFFWHITE1  = hsv($HUE,$SATURATION,230);
$OFFWHITE2  = hsv($HUE,$SATURATION,240);


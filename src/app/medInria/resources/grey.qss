$SCROLL_BAR_VERTICAL_COLOR        = qradialgradient(cx: 0, cy: 0.5, fx: 0, fy: 0.5, radius: 1, stop: 0 $GREY08, stop: 1 $GREY11);

/*******************************************************************************
    PROGRESS_BAR COLOR
 *******************************************************************************/
$PROGRESS_BAR_BACKGROUND = $GREY03;
$PROGRESS_BAR_COLOR      = $DARK_ORANGE;
$PROGRESS_BAR_TEXT_COLOR = $GREY00;

/*******************************************************************************
    TOOLBOX COLOR
 *******************************************************************************/
$TOOLBOX_HEADER_BACKGROUND    = qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 $GREY06, stop: 1 $GREY07);
$TOOLBOX_BODY_BACKGROUND      = qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 $GREY02, stop: 1 $GREY01);
$TOOLBOX_BACKGROUND           = $GREY04;
$TOOLBOX_HEADER_COLOR         = $BLUE_GREY;
$TOOLBOX_INNER_TITLE          = $DARK_ORANGE;

/*******************************************************************************
    COMBO_BOX COLOR
 *******************************************************************************/
$COMBO_BOX_BACKGROUND               = qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 $GREY02, stop: 1 $GREY03);

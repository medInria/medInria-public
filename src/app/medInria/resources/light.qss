/*******************************************************************************
    QWidget
 *******************************************************************************/
QWidget:disabled
{
    color: $DISABLE_COLOR;
}

QWidget
{
    color: $WIDGET_COLOR;
    background: $WIDGET_BACKGROUND;
    border: $WIDGET_BORDER;
    outline: 0px;
}

/*******************************************************************************
    QToolTip
 *******************************************************************************/
QToolTip
{
    color: $TOOLTIP_COLOR;
    background: $TOOLTIP_BACKGROUND;
    padding: 1px;
}

/*******************************************************************************
    QTableView
 *******************************************************************************/
QTableView
{
    gridline-color: $GRIDLINE_COLOR;
    background: $LIST_BACKGROUND;
    alternate-background-color: $ALT_LIST_BACKGROUND;
    color: $LIST_FONT_COLOR;
}

/*******************************************************************************
    QListView
 *******************************************************************************/
QListView
{
    gridline-color: $GRIDLINE_COLOR;
    background: $LIST_BACKGROUND;
    alternate-background-color: $ALT_LIST_BACKGROUND;
    color: $LIST_FONT_COLOR;
}

QListWidget:item
{ 
    selection-background-color: $GREY11;
} 

/*******************************************************************************
    QTextEdit
 *******************************************************************************/
QTextEdit
{
    color: $EDITION_COLOR;
    background: $EDITION_BACKGROUND;
    margin-top: 10px;
}

/*******************************************************************************
    QDateEdit
 *******************************************************************************/
QDateEdit
{
    color: $EDITION_COLOR;
    background: $EDITION_BACKGROUND;
}

QDateEdit::down-arrow
{
    image: url(:/icons/light/24x24/arrow-bot.png);
}

/*******************************************************************************
     QSpinBox QDoubleSpinBox
 *******************************************************************************/
QSpinBox, QDoubleSpinBox
{
    color: $SPINBOX_FONT_COLOR;
    background: $SPINBOX_BACKGROUND;
    min-height: 20px;
}

QSpinBox::up-button, QDoubleSpinBox::up-button
{
    subcontrol-origin: border;
    subcontrol-position: top right;
    border: none;
    background: $PUSH_BUTTON_BACKGROUND;
}

QSpinBox::up-button:hover, QDoubleSpinBox::up-button:hover
{
    background: $PUSH_BUTTON_HOVER_BACKGROUND;
}

QSpinBox::up-arrow, QDoubleSpinBox::up-arrow
{
    image: url(:/icons/light/24x24/arrow-top.png);
}

QSpinBox::up-arrow:disabled, QDoubleSpinBox::up-arrow:disabled
{
    image: url(:/icons/dark/24x24/arrow-top.png);
}

QSpinBox::down-button, QDoubleSpinBox::down-button
{
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    border: none;
    background: $PUSH_BUTTON_BACKGROUND;
}

QSpinBox::down-button:hover, QDoubleSpinBox::down-button:hover
{
    background: $PUSH_BUTTON_HOVER_BACKGROUND;
}

QSpinBox::down-arrow, QDoubleSpinBox::down-arrow
{
    image: url(:/icons/light/24x24/arrow-bot.png);
}

QSpinBox::down-arrow:disabled, QDoubleSpinBox::down-arrow::disabled
{
    image: url(:/icons/dark/24x24/arrow-bot.png);
}

/*******************************************************************************
     QComboBox
 *******************************************************************************/
QComboBox
{
    border-radius: $COMBO_BOX_RADIUS;
    background-color: $COMBO_BOX_BACKGROUND;
    height: $COMBO_BOX_SIZE;
    min-width: $COMBO_BOX_SIZE;
    padding: 0px $COMBO_BOX_PADDING;
    color: $BLUE_ROI; /*added*/
}

QComboBox::drop-down
{
    padding-right: $COMBO_BOX_PADDING;
    image: url(:/icons/light/24x24/arrow-bot.png);
    subcontrol-origin: padding;
    subcontrol-position: center right;
}

QComboBox::hover
{
    background-color: $COMBO_BOX_HOVER_BACKGROUND;
    color: $COMBO_BOX_HOVER_COLOR; /*added*/
}

QComboBox QAbstractItemView:item
{
    background-color: $COMBO_BOX_ITEM_BACKGROUND;
    selection-background-color: $COMBO_BOX_ITEM_SELECTED_BACKGROUND;
    selection-color: $COMBO_BOX_ITEM_SELECTED_COLOR;
    outline: 0px;
}

QComboBox:item:selected
{
    selection-background-color: $COMBO_BOX_ITEM_SELECTED_BACKGROUND;
    selection-color: $COMBO_BOX_ITEM_SELECTED_COLOR;
}

QComboBox QAbstractItemView::disabled
{
    color:$COMBO_BOX_ITEM_DISABLED;
}

QComboBox QAbstractItemView 
{
    border: 1px solid darkgray;
    selection-background-color: lightgray;
}

/*******************************************************************************
     QCheckBox
 *******************************************************************************/
QCheckBox
{
    background: none;
    color: $CHECKBOX_FONT_COLOR;
}

QCheckBox::indicator
{
    width: $CHECKBOX_SIZE;
    height: $CHECKBOX_SIZE;
}

/*all checkboxes switched*/
QCheckBox::indicator:unchecked
{
    image: url(:icons/light/24x24/checkbox.png); 
}

QCheckBox::indicator:checked
{
    image: url(:icons/light/24x24/checkbox-checked.png);
}

QCheckBox::indicator:indeterminate
{
    image: url(:/icons/checkbox-partial.png); /*same icon in dark or light icon themes*/
}

QCheckBox::indicator:disabled:unchecked
{
    image: url(:icons/dark/24x24/checkbox.png);
}

QCheckBox::indicator:disabled:checked
{
    image: url(:icons/dark/24x24/checkbox-checked.png);
}

/*******************************************************************************
     QTreeView
 *******************************************************************************/
QTreeView
{
     alternate-background-color: $ALT_LIST_BACKGROUND;
     background: $LIST_BACKGROUND;
     color: $LIST_FONT_COLOR;
}

QTreeView::item
{
    padding: $TREE_VIEW_ITEM_PADDING 0px;
}

QTreeView::indicator:indeterminate
{
    image: url(:/icons/checkbox-partial.png); /*same icon in dark or light icon themes*/
}

QTreeView::indicator:checked
{
    background: url(:icons/dark/24x24/checkbox-checked.png);
}

QTreeView::indicator:unchecked
{
    image: url(:icons/dark/24x24/checkbox.png);
}

QTreeView::branch:has-siblings:!adjoins-item
{
    image: none;
}

QTreeView::branch:has-siblings:adjoins-item
{
    image: none;
}

QTreeView::branch:!has-children:!has-siblings:adjoins-item
{
    image: none;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings
{
    border-image: none;
    image: url(:/icons/light/24x24/arrow-right.png);
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings
{
    border-image: none;
    image: url(:/icons/light/24x24/arrow-bot.png);
}

/*******************************************************************************
     QLabel
 *******************************************************************************/
QLabel
{
    color: $EDITION_COLOR;
    background: none;
}

QLabel#innerTitle
{
    color: $TOOLBOX_INNER_TITLE;
    background: none;
}

/*******************************************************************************
     QTableWidget
 *******************************************************************************/
QTableWidget
{
    gridline-color: $GRIDLINE_COLOR;
    background: $BLUE_GREY_LIGHT;
    alternate-background-color: $ALT_LIST_BACKGROUND;
    color: $LIST_FONT_COLOR;
}

/*******************************************************************************
     QHeaderView
 *******************************************************************************/
QHeaderView
{
    background-color: $HEADER_BACKGROUND;
    color: $HEADER_COLOR;
    border: none;
}

QHeaderView::section
{
    background-color: $HEADER_BACKGROUND;
    color: $HEADER_COLOR;
    padding: $HEADER_PADDING;
    padding-left: $HEADER_LEFT_PADDING;
    padding-right:$HEADER_RIGHT_PADDING;
    min-height: $HEADER_HEIGHT;
    border: none;
}

QHeaderView::down-arrow
{
    image: url(:/icons/dark/24x24/arrow-bot.png);
}

QHeaderView::up-arrow
{
    image: url(:/icons/dark/24x24/arrow-top.png);
}

/*******************************************************************************
     QLineEdit
 *******************************************************************************/
QLineEdit
{
    color: $QLINEEDIT_FONT_COLOR;
    background: $QLINEEDIT_BACKGROUND;
    border-radius: $LINE_EDIT_RADIUS;
}

/*******************************************************************************
     QProgressBar
 *******************************************************************************/
QProgressBar
{
    border: $PROGRESS_BAR_BORDER;
    border-radius: $PROGRESS_BAR_RADIUS;
    background-color: $PROGRESS_BAR_BACKGROUND;
    max-height: $PROGRESS_BAR_HEIGHT;
    text-align: right;
    color: $PROGRESS_BAR_TEXT_COLOR;
}

QProgressBar::chunk
{
    border-radius: $PROGRESS_BAR_RADIUS;
    background-color: $PROGRESS_BAR_COLOR;
}

QProgressBar::chunk[success = "true"]
{
    background: $GREEN;
}

QProgressBar::chunk[failure = "true"]
{
    background: $RED;
}

/*******************************************************************************
     QStatusBar
 *******************************************************************************/
QStatusBar
{
    background: $STATUS_BAR_BACKGROUND;
    min-height: $STATUS_BAR_HEIGHT;
}

QStatusBar QWidget
{
    background: $STATUS_BAR_BACKGROUND;
    height: $STATUS_BAR_HEIGHT;
}

QStatusBar::item
{
    background: $STATUS_BAR_BACKGROUND;
}

/*******************************************************************************
     QRadioButton
 *******************************************************************************/
QRadioButton
{
    background: none;
    outline: 0px;
    color: $RADIOBUTTON_FONT_COLOR;
}

QRadioButton::indicator
{
    width: $RADIO_BUTTON_SIZE;
    height: $RADIO_BUTTON_SIZE;
}

QRadioButton::indicator:unchecked
{
    image: url(:icons/dark/24x24/radio.png);
}

QRadioButton::indicator:checked
{
    image: url(:icons/dark/24x24/radio-checked.png);
}

QRadioButton::indicator:indeterminate
{
    image: url(:/icons/radio-partial.png); /*same icon in dark or light icon themes*/
}

QRadioButton::indicator:disabled:unchecked
{
    image: url(:icons/light/24x24/radio.png);
}

QRadioButton::indicator:disabled:checked
{
    image: url(:icons/light/24x24/radio-checked.png);
}

/*******************************************************************************
     QSlider
 *******************************************************************************/
QSlider
{
    background: none;
}

QSlider::groove:horizontal
{
    border-radius: $SLIDER_RADIUS;
    background: $SLIDER_HORIZONTAL_BACKGROUND;
    height: $SLIDER_SIZE;
}

QSlider::handle:horizontal
{
    background: $SLIDER_COLOR;
    width: $SLIDER_SIZE;
    border-radius: $SLIDER_RADIUS;
}

QSlider::groove:vertical
{
    border-radius: $SLIDER_RADIUS;
    background: $SLIDER_VERTICAL_BACKGROUND;
    width: $SLIDER_SIZE;
}

QSlider::handle:vertical
{
    background: $SLIDER_COLOR;
    height: $SLIDER_SIZE;
    border-radius: $SLIDER_RADIUS;
}

QSlider::groove:horizontal:disabled
{
    background: $SLIDER_DISABLED_HORIZONTAL_BACKGROUND;
}

QSlider::handle:horizontal:disabled
{
    background: $SLIDER_DISABLED_COLOR;
}

QSlider::groove:vertical:disabled
{

    background: $SLIDER_DISABLED_VERTICAL_BACKGROUND;
}

QSlider::handle:vertical:disabled
{
    background: $SLIDER_DISABLED_COLOR;
}

/*******************************************************************************
     QPushButton QToolButton
 *******************************************************************************/
QPushButton, QPushButton:flat, QToolButton
{
    border-radius: $PUSH_BUTTON_RADIUS;
    background-color: $PUSH_BUTTON_BACKGROUND;
    height: $PUSH_BUTTON_SIZE;
    min-width: $PUSH_BUTTON_SIZE;
    padding: 0px $PUSH_BUTTON_PADDING;
    outline: 0px;
    color: $GREY_DARK; /*added*/
}

QPushButton:hover, QToolButton:hover
{
    background-color: $PUSH_BUTTON_HOVER_BACKGROUND;
    color: $PUSH_BUTTON_HOVER_COLOR;
}

/* Button pressed and not released*/
QPushButton:pressed, QToolButton:pressed
{
    background-color: $PUSH_BUTTON_PRESSED_BACKGROUND;
    color: $PUSH_BUTTON_PRESSED_COLOR;
}

QPushButton:checked, QToolButton:checked
{
    background-color: $PUSH_BUTTON_CHECKED_BACKGROUND;

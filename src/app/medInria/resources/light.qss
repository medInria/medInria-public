/*******************************************************************************
     QScrollBar
 *******************************************************************************/
QScrollBar:horizontal
{
    background: $SCROLL_BAR_HORIZONTAL_BACKGROUND;
    height: $SCROLL_BAR_WIDTH;
    min-width :$SCROLL_BAR_MIN_SIZE;
}

QScrollBar::handle:horizontal
{
    border-radius: $SCROLL_BAR_RADIUS;
    border: 1px solid $SCROLL_BAR_HORIZONTAL_BACKGROUND;
    background: $SCROLL_BAR_HORIZONTAL_COLOR;
    height: $SCROLL_BAR_WIDTH;
    min-width :$SCROLL_BAR_MIN_SIZE;
}

QScrollBar::add-line:horizontal
{
    background: none;
    width: 0px;
    height: 0px;
    border: none;
}

QScrollBar::sub-line:horizontal
{
    background: none;
    width: 0px;
    height: 0px;
    border: none;
}

QScrollBar:vertical
{
    background: $SCROLL_BAR_VERTICAL_BACKGROUND;
    width: $SCROLL_BAR_WIDTH;
    min-height :$SCROLL_BAR_MIN_SIZE;
}

QScrollBar::handle:vertical
{
    border-radius: $SCROLL_BAR_RADIUS;
    border: 1px solid $SCROLL_BAR_HORIZONTAL_BACKGROUND;
    background: $SCROLL_BAR_VERTICAL_COLOR;
    width: $SCROLL_BAR_WIDTH;
    min-height: $SCROLL_BAR_MIN_SIZE;
}

QScrollBar::add-line:vertical
{
    background: none;
    width: 0px;
    height: 0px;
    border: none;
}

QScrollBar::sub-line:vertical
{
    background: none;
    width: 0px;
    height: 0px;
    border: none;
}

